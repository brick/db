{
    "name": "brick/db",
    "description": "Database tools library",
    "type": "library",
    "keywords": [
        "Brick",
        "DB",
        "PDO",
        "BulkInserter",
        "BulkDeleter"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "php-coveralls/php-coveralls": "^2.0",
        "vimeo/psalm": "6.3.0"
    },
    "autoload": {
        "psr-4": {
            "Brick\\Db\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Brick\\Db\\Tests\\": "tests/"
        }
    }
}
